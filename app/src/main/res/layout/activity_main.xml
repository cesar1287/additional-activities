<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comcesar1287.github.www.additionalactivities.view.MainActivity">

    <TextView
        android:id="@+id/main_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_separator"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/main_hours_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_hours_completed"
        android:textSize="30sp"
        android:layout_toLeftOf="@id/main_separator"
        android:layout_toStartOf="@id/main_separator"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/main_total_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_total_hours"
        android:textSize="30sp"
        android:layout_toRightOf="@id/main_separator"
        android:layout_toEndOf="@id/main_separator"
        android:layout_marginTop="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"/>

    <RelativeLayout
        android:id="@+id/categories_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_separator"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
